.ad--top {
  height: 200px;
  width: 680px;
  margin: 3rem auto;
  background-color: #cccccc;
  content: 'ads';
  text-align: center;
  position: relative;

  &::before {
    content: 'G-ADS';
    font-size: 5rem;
    color: #fff;
    @mixin absoluteCenter;
  }
  &::after {
    content: 'Реклама';
    position: absolute;
    top: -18px;
    font-size: .8rem;
    left: 0;
  }
}
